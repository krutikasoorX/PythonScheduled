pipeline {
    agent {
        docker {
            image 'node'
        }
    }
    triggers {
        cron('*/5 * * * *')
    }
    environment {
        Num1 = '9'
        Num2 = '80'
        HOME="."
    }
    stages {
        stage('Version') {
            steps {
                echo 'Running Python version...'
                script{
                    docker.image('node').inside('-v /var/run/docker.sock:/var/run/docker.sock -w ' + pwd()) {
                    bat "python --version"}}
            }
        }
        stage('Hello') {
            steps {
                echo 'Running hello script...'
                script{
                    docker.image('node').inside('-v /var/run/docker.sock:/var/run/docker.sock -w ' + pwd()) {
                    bat "python -x loopExec.py ${env.Num1} ${env.Num2}"
            }}
        }
    }
}}
