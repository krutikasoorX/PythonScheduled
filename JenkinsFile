pipeline {
    agent any
    environment {
        PATH = "C://Users/Admin/AppData/Local/Programs/Python/Python311;C://Windows/System32;"  // Adjust the Python path as per your installation
        Num1 = '9'
        Num2 = '80'
        HOME="."
    }

    stages {
        stage('Checkout') {
            steps {

                // Checkout the GitHub repository
                git branch: 'main', credentialsId: '8ce46a16-a3a9-4ff5-8338-ffdc1ea7e4b0', url: 'https://github.com/krutikasoorX/PythonScheduled.git'
            }
        }

        stage('Run Python Script') {
            steps {
                // Assuming Python is installed on the Jenkins agent
                bat 'python loopExec.py'
            }
        }
    }
}
